<tr class='leg' data-id='{{id}}'>
    <td>{{type}}</td>
    <td>{{distance}}</td>
    <td>{{unit}}</td>
    <td>
        <span class='d-flex justify-content-end'>
            <span class='editLeg text-warning p-2' title='Edit'>
                <i class='fa fa-edit fa-2x'></i>
            </span>
            <span class='removeLeg text-danger p-2' title='Remove'>
                <i class='fa fa-close fa-2x'></i>
            </span>
        </span>
    </td>
</tr>
